<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="34dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/vector"
        android:id="@+id/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_1"/>
    <ImageButton
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/refresh_icon_svg"
        android:id="@+id/refresh_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_1"/>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="string/asset_detail_1"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/back_btn"
        app:layout_constraintBottom_toTopOf="@id/iv_1"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/attribution_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        app:layout_constraintBottom_toTopOf="@id/et_4"/>
    <EditText
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_buffer"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="3"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:text="string/asset_detail_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_buffer"
        app:layout_constraintBottom_toBottomOf="@id/iv_1"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_4"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="442"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:text="string/asset_detail_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_4"
        app:layout_constraintBottom_toBottomOf="@id/iv_1"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:text="string/asset_detail_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_5"
        app:layout_constraintBottom_toBottomOf="@id/et_4"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_5"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="442"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_7"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:id="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:text="string/asset_detail_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_6"
        app:layout_constraintBottom_toBottomOf="@id/et_buffer"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_6"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="3"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_7"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:id="@+id/tv_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:text="string/asset_detail_6"
        app:layout_constraintTop_toBottomOf="@id/et_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_7"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_7"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="443"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_8"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:id="@+id/tv_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:text="string/asset_detail_7"
        app:layout_constraintTop_toBottomOf="@id/et_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_8"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_8"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="443"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/roboto"/>
    <ImageButton
        android:id="@+id/ib_1"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/send_1"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_8"/>
    <ImageButton
        android:id="@+id/ib_2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/send_1"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
