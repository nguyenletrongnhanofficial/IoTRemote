<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtNameDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Asset: "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp" />

    <Spinner
        android:id="@+id/spnThumbnail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_spinner"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNameDish"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="145dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txtNameEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Value: "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtNameDish"
        app:layout_constraintTop_toBottomOf="@+id/txtNameDish"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spnThumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_spinner"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNameEmployee"
        app:layout_constraintTop_toBottomOf="@+id/spnThumbnail2"
        android:layout_marginLeft="145dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txtPromotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Compare: "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/txtNameEmployee"
        app:layout_constraintTop_toBottomOf="@+id/txtNameEmployee"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/check_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPromotion"
        app:layout_constraintStart_toEndOf="@+id/txtPromotion"
        app:layout_constraintTop_toTopOf="@+id/txtPromotion"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="25dp" />

    <Button
        android:id="@+id/btnAddfillter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:background="@color/teal_200"
        android:text="ADD FILLTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_promotion" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddfillter" />
</androidx.constraintlayout.widget.ConstraintLayout>