<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/asset_add_tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your new asset info"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_1"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"/>



        <EditText
            android:id="@+id/asset_add_et_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Name"
            android:padding="15dp"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/asset_add_tv_1" />

        <EditText
            android:id="@+id/asset_add_et_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset ID
"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_1"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_3"/>

        <EditText
            android:id="@+id/asset_add_et_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset location X"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_2" />

        <EditText
            android:id="@+id/asset_add_et_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset location Y"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_3" />

        <EditText
            android:id="@+id/asset_add_et_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Humidity (%)"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_4" />

        <EditText
            android:id="@+id/asset_add_et_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Rainfall (mm)"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_5" />

        <EditText
            android:id="@+id/asset_add_et_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Sun altitude"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_6" />

        <EditText
            android:id="@+id/asset_add_et_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Sun azimuth"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_7" />

        <EditText
            android:id="@+id/asset_add_et_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Sun irradiance"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_8" />

        <EditText
            android:id="@+id/asset_add_et_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Sun zenith"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_9" />

        <EditText
            android:id="@+id/asset_add_et_11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Temperature (Â°C)"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_10" />

        <EditText
            android:id="@+id/asset_add_et_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset UV index"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_11" />

        <EditText
            android:id="@+id/asset_add_et_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Wind direction"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/asset_add_et_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_12" />

        <EditText
            android:id="@+id/asset_add_et_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="#f7f8f9"
            android:fontFamily="@font/roboto"
            android:hint="Enter Asset Wind speed (km/h)"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/asset_add_btn_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_13" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/asset_add_btn_add"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_button"
            android:textSize="17dp"
            android:text="ADD"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asset_add_et_14"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>