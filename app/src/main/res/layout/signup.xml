<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageButton
        android:layout_width="20dp"
        android:layout_height="34dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/vector"
        android:id="@+id/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_1"/>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_1"
        android:textSize="35sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/back_btn"
        app:layout_constraintBottom_toTopOf="@id/et_4"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/et_4"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="@string/sign_up_2"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        app:layout_constraintBottom_toTopOf="@id/et_email"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/roboto"
        android:inputType="textEmailAddress"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/et_email"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:hint="@string/sign_up_3"
        app:layout_constraintTop_toBottomOf="@+id/et_4"
        app:layout_constraintBottom_toTopOf="@+id/tv_5"
        android:fontFamily="@font/roboto"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/tv_5"
        android:password="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:hint="@string/sign_up_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/et_password_2"
        android:password="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ngoc_textbox_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:hint="@string/sign_up_5"
        app:layout_constraintTop_toBottomOf="@id/tv_5"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_up"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"></EditText>


    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@drawable/ngoc_button_bg"
        android:padding="20dp"
        android:text="@string/sign_up_6"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/et_password_2"
        app:layout_constraintBottom_toTopOf="@id/tv_22"/>
    <TextView
        android:id="@+id/tv_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/sign_up_7"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_up"
        app:layout_constraintBottom_toTopOf="@id/btn_google_sign_up"></TextView>
    <ImageButton
        android:id="@+id/btn_google_sign_up"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:background="@drawable/_991148"
        app:layout_constraintTop_toBottomOf="@id/tv_22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_in_now"></ImageButton>
    <ImageButton
        android:id="@+id/btn_facebook"
        android:layout_width="26dp"
        android:layout_height="51dp"
        android:background="@drawable/vector__2_"
        app:layout_constraintTop_toBottomOf="@id/tv_22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_google_sign_up"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_in_now"></ImageButton>
    <ImageButton
        android:id="@+id/btn_apple"
        android:layout_width="43dp"
        android:layout_height="51dp"
        android:background="@drawable/vector__4_"
        app:layout_constraintTop_toBottomOf="@id/tv_22"
        app:layout_constraintStart_toEndOf="@id/btn_google_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_in_now"></ImageButton>
    <Button
        android:id="@+id/btn_sign_in_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ngoc_backgr_white"
        android:text="@string/sign_up_8"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_google_sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/roboto_bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>